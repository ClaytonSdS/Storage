WindowManager:
    transition: NoTransition()
    Inicio:
	    name: "Inicio"

#///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
<Inicio>
    MDGridLayout:
        cols: 2
        rows: 1
        MDBoxLayout:
            id: menu_bar
            orientation: 'vertical'
            spacing: 1
            padding: 20
            size_hint_x: None
            width: int(0.185*self.parent.width)
            canvas:
                Color:
                    rgb: 1, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
                    texture: Gradient.vertical(get_color_from_hex("#FFFFFF"), get_color_from_hex("#FFFFFF"))

        #/////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        # AREA LIVRE + BARRA DE MENU
        MDBoxLayout:
            orientation: 'vertical'
            md_bg_color: 0.9019, 0.9215, 0.9843,1
            pos_hint: 0.5, 0.5


            MDGridLayout:
                rows: 2
                cols: 1
                size_hint: 1,1

                #/////////////////////////////////////////////////////////////////////////////////////////////////////////////////
                # AREA LIVRE PARA TRABALHO
                MDBoxLayout:
                    size_hint: (1,1)
                    orientation: 'horizontal'
                    padding: 20
                    md_bg_color: get_color_from_hex('#FFFFFF')
                    pos_hint: 0.5, 0.5
